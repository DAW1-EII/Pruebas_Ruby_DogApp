
<h1>Mis perros</h1>

<table>
  <tr>
    <thead>
        <th>Nombre</th>
        <th>Descripcion</th>
    </thead>
  </tr>
  <% @dogs.each do |dog| %>
  <tr>
    <td><%= dog.name %></td>
    <td><%= dog.motto %></td>
    <td>
      <%= button_to 'Mostrar', dog_path(dog), method: 'get'%>
    </td>
    <td>
    <%= button_to 'Editar', edit_dog_path(dog), method: 'get'%>
    </td>
    <td>
      <%= button_to 'Eliminar', dog_path(dog), method: 'delete', data: { confirm: 'Are you sure?' } %>
    </td>

  </tr>
    <% end %>
</table>
